{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "declaration": true,
        "sourceMap": true,
        "outDir": "../../dist/apps/provider",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*spec.ts"
    ]
}